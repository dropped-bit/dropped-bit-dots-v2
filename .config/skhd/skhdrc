# SET UP FOR MAC

# -- Changing Window Focus --

# change window focus within space
cmd + alt + ctrl - j : yabai -m window --focus south
cmd + alt + ctrl - k : yabai -m window --focus north
cmd + alt + ctrl - h : yabai -m window --focus west
cmd + alt + ctrl - l : yabai -m window --focus east

# move window to space #
cmd + alt + ctrl + shift - 1 : yabai -m window --space 1;
cmd + alt + ctrl + shift - 2 : yabai -m window --space 2;
cmd + alt + ctrl + shift - 3 : yabai -m window --space 3;
cmd + alt + ctrl + shift - 4 : yabai -m window --space 4;
cmd + alt + ctrl + shift - 5 : yabai -m window --space 5;
cmd + alt + ctrl + shift - 6 : yabai -m window --space 6;
# shift + alt - 7 : yabai -m window --space 7;
# shift + alt - 8 : yabai -m window --space 8;

#change focus between external displays (left and right)
cmd + shift + alt + ctrl - s: yabai -m display --focus west
cmd + shift + alt + ctrl - g: yabai -m display --focus east

# -- Modifying the Layout --

# # rotate layout clockwise
# cmd + alt + ctrl - r : yabai -m space --rotate 270
#
# # flip along y-axis
# cmd + ctrl + alt - y : yabai -m space --mirror y-axis
#
# # flip along x-axis
# cmd + ctrl + alt - x : yabai -m space --mirror x-axis

# toggle window float
cmd + ctrl + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2


# -- Modifying Window Size --

# maximize a window
cmd + alt + ctrl - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
# cmd + alt + ctrl - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
# shift + alt - j : yabai -m window --swap south
# shift + alt - k : yabai -m window --swap north
# shift + alt - h : yabai -m window --swap west
# shift + alt - l : yabai -m window --swap east

# move window and split
# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# ctrl + alt - h : yabai -m window --warp west
# ctrl + alt - l : yabai -m window --warp east
#
# move window to display left and right
# shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
# shift + alt - g : yabai -m window --display east; yabai -m display --focus east;


# move window to prev and next space
# shift + alt - p : yabai -m window --space prev;
# shift + alt - n : yabai -m window --space next;


# -- Starting/Stopping/Restarting Yabai --

# restart yabai
ctrl + alt - r : yabai --restart-service && skhd --restart-service 
